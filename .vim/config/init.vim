syntax on
set termguicolors
set number
set hlsearch
set mouse=a
set cursorline
set autoindent
set shiftwidth=4
set expandtab
set tabstop=4
set splitbelow
set laststatus=2
set noshowmode
set splitright
set ttyfast
set ttymouse=xterm2
set backspace=indent,eol,start

" Use new regex engine
set re=0

" netrw settings
let g:netrw_dirhistmax = 0
let g:netrw_liststyle = 1

